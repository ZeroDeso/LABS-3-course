public class BubbleSort {

    public static void main(String[] args) {
        // Исходный массив для сортировки пузырьком
        int[] array = {64, 34, 25, 12, 22, 11, 90};

        System.out.println("Исходный массив:");
        printArray(array);

        // Вызов метода сортировки пузырьком
        bubbleSort(array);

        System.out.println("\nОтсортированный массив:");
        printArray(array);
    }

    /**
     * Метод для сортировки массива методом пузырька.
     *
     * @param arr Массив, который требуется отсортировать.
     */
    public static void bubbleSort(int[] arr) {
        int n = arr.length;

        // Внешний цикл пробегает по всем элементам массива
        for (int i = 0; i < n - 1; i++) {
            // Внутренний цикл сравнивает и меняет местами соседние элементы
            for (int j = 0; j < n - i - 1; j++) {
                // Сравниваем элементы и меняем их местами, если нужно
                if (arr[j] > arr[j + 1]) {
                    // Обмен значениями между arr[j] и arr[j + 1]
                    int temp = arr[j];
                    arr[j] = arr[j + 1];
                    arr[j + 1] = temp;
                }
            }
        }
    }

    /**
     * Метод для вывода массива в консоль.
     *
     * @param arr Массив, который требуется вывести.
     */
    public static void printArray(int[] arr) {
        // Перебираем элементы массива и выводим их
        for (int value : arr) {
            System.out.print(value + " ");
        }
        System.out.println();
    }
}
